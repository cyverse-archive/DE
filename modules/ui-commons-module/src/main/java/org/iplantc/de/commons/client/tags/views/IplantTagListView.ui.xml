<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:container="urn:import:com.sencha.gxt.widget.core.client.container"
	xmlns:form="urn:import:com.sencha.gxt.widget.core.client.form"
	xmlns:vs="urn:import:org.iplantc.de.commons.client.tags.views"
	xmlns:w="urn:import:org.iplantc.de.commons.client.tags.views">

	<ui:with type="com.sencha.gxt.core.client.util.Margins" field="outerMargins">
		<ui:attributes top="0" right="2" bottom="2" left="2" />
	</ui:with>

	<ui:with
		type="com.sencha.gxt.widget.core.client.container.VerticalLayoutContainer.VerticalLayoutData"
		field="tagSearchLayoutData">
		<ui:attributes width="-1" height="-1" margins="{outerMargins}" />
	</ui:with>

	<ui:with
		type="com.sencha.gxt.widget.core.client.container.VerticalLayoutContainer.VerticalLayoutData"
		field="tagsLayoutData">
		<ui:attributes width="-1" height="-1" />
	</ui:with>

	<container:VerticalLayoutContainer
		ui:field="tagListPanel">
		<container:child layoutData="{tagSearchLayoutData}">
			<form:FieldLabel ui:field="taglbl" labelWidth="30" labelAlign="TOP">
			</form:FieldLabel>
		</container:child>
		<container:child layoutData="{tagSearchLayoutData}">
		      <w:TagSearchField ui:field="tagSearchField"></w:TagSearchField>
		</container:child>
		<container:child layoutData="{tagsLayoutData}">
			<vs:TagsPanel ui:field="tagsPanel" height="150px" width="160px">
			</vs:TagsPanel>
		</container:child>
	</container:VerticalLayoutContainer>
</ui:UiBinder> 